{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": false,
    "preserveConstEnums": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/index.ts",
    "src/components/CaptionWithIntention.tsx",
    "src/managers/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "src/fontsource-variable.d.ts"
  ],
  "exclude": [
    "src/App.tsx",
    "src/main.tsx", 
    "src/App.css",
    "src/index.css",
    "src/components/CaptionWithIntentionDemo.tsx",
    "src/vite-env.d.ts",
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
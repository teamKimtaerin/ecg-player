{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "rootDir": "./src/lib",
    "outDir": "./dist/types",
    "composite": false,
    "noEmit": false
  },
  "include": ["src/lib/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
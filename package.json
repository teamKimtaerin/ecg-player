{
  "name": "ecg-player",
  "version": "1.0.0",
  "description": "ECG Player - A React component for Caption With Intention, an advanced captioning system with speaker identity, voice characteristics, and speech dynamics visualization",
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ecg-player"
  },
  "keywords": [
    "caption",
    "subtitle",
    "accessibility",
    "deaf",
    "hard-of-hearing",
    "typography",
    "animation",
    "react",
    "video-player"
  ],
  "type": "module",
  "main": "./dist/ecg-player.cjs.js",
  "module": "./dist/ecg-player.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ecg-player.es.js",
      "require": "./dist/ecg-player.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./styles": "./dist/ecg-player.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "sync:lib": "cp -r src/components/* src/lib/components/ && echo 'âœ… Synced development components to library'",
    "build:lib": "vite build --config vite.config.lib.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "dependencies": {
    "@fontsource-variable/roboto-flex": "^5.2.6",
    "gsap": "^3.13.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^3.9.1"
  }
}

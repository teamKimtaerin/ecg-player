{
  "name": "ecg-player",
  "version": "1.0.0",
  "description": "ECG Player - A React component for Caption With Intention, an advanced captioning system with speaker identity, voice characteristics, and speech dynamics visualization",
  "author": "teamKimtaerin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teamKimtaerin/ecg-player.git"
  },
  "homepage": "https://github.com/teamKimtaerin/ecg-player#readme",
  "bugs": {
    "url": "https://github.com/teamKimtaerin/ecg-player/issues"
  },
  "keywords": [
    "caption",
    "subtitle",
    "accessibility",
    "deaf",
    "hard-of-hearing",
    "typography",
    "animation",
    "react",
    "video-player"
  ],
  "type": "module",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "files": [
    "lib",
    "README.md",
    "tsconfig.lib.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc -p tsconfig.lib.json",
    "prepublishOnly": "npm run build:lib",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fontsource-variable/roboto-flex": "^5.2.6",
    "gsap": "^3.13.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
